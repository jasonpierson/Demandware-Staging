/**
* Demandware Script File
* To define input and output parameters, create entries of the form:
*
* @<paramUsageType> <paramName> : <paramDataType> [<paramComment>]
*
* where
*   <paramUsageType> can be either 'input' or 'output'
*   <paramName> can be any valid parameter name
*   <paramDataType> identifies the type of the parameter
*   <paramComment> is an optional comment
*
* For example:
*
*   @input encryptedInfo : String 
*   @output subscriptionConfirmed : Boolean
*	@output confirmationForm : String
*   @output errorMessage : String
*
*/
importPackage( dw.system );
importPackage( dw.catalog );
importPackage( dw.util );
importPackage( dw.crypto );

function execute( args : PipelineDictionary ) : Number
{

    var inputInfo : String = args.encryptedInfo;
	var subscriptionID : String;
	var currentDate : Calendar = new Calendar(new Date());
	args.subscriptionConfirmed = false;
	args.errorMessage = null;
	
	var message : String = "";
	var pubKey = '';
	var cipher : Cipher = new Cipher();
	
    // insert business logic here
	message = cipher.decrypt(inputInfo, pubKey, 'RSA', '', 0);
	if (message != null && message != "") {
	    var testStrResultArray = message.split("|");
	    
	    subscriptionID = testStrResultArray[0];
	    var expiringDate : Calendar = new Calendar(new Date(testStrResultArray[1]));
	    
	    //If expiring date is in past then forward to invlid download link
	    if (expiringDate.compareTo(currentDate) < 0) {
	    	//Link Expired!!
	    	return PIPELET_ERROR;
	    } else {
	    	//confirm subscription
			var subscriptionIterator : dw.util.SeekableIterator = dw.object.CustomObjectMgr.queryCustomObjects("Subscription", "custom.SubscriptionID = {0}", "custom.SubscriptionID asc", subscriptionID);	    	
			var subscriptionObject : object = null;
			while (subscriptionIterator != null && subscriptionIterator.hasNext())
			{
				subscriptionObject = subscriptionIterator.next();
				if (subscriptionObject.custom.SubscriptionID == subscriptionID) {
					subscriptionObject.custom.DateOfCustomerConfirmation = dw.util.DateUtils.nowForInstance();
					args.confirmationForm = testStrResultArray[2];
					args.subscriptionConfirmed = true;
					break;
				}
			}
			if (!args.subscriptionConfirmed) {
				args.errorMessage = 'Your subscription was not found. Please contact Customer Service at (877-568-2437) Monday - Friday 8AM CST - 4:30PM CST.';
			} 
	    }
	} else {
		return PIPELET_ERROR;
	}
   	return PIPELET_NEXT;
}